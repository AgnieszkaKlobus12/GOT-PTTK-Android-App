    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nr legitymacji" />

    <EditText
        android:id="@+id/leader_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImiÄ™ i nazwisko" />

    <TextView
        android:id="@+id/leader_name"
